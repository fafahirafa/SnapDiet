<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:background="@color/abumuda"
android:padding="20dp"
android:layout_gravity="center">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/textNamaMakananRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="20sp"
        android:text="Salmon"
        android:textStyle="bold"
        android:textColor="@color/abutuasekali"
        android:fontFamily="@font/ubuntu_med"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/imageRec"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/textParagraphRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/abutuamed"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"/>
</LinearLayout>

</LinearLayout>